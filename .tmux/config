# Use C-a as prefix
unbind C-b
set -g prefix C-a
bind C-a send-prefix

# Mouse support
set -g mode-mouse on
set -g mouse-resize-pane on
set -g mouse-select-pane on
set -g mouse-select-window on
set -g mouse-utf8 on

# scrollback buffer
set -g history-limit 4096

# Start with window 0
set -g base-index 0

# Start with pane 0
set -g pane-base-index 0

# Resizing
bind-key > resize-pane -R 10
bind-key < resize-pane -U 10

# Vi mode
setw -g mode-keys vi
unbind [
bind Escape copy-mode
unbind p
bind p paste-buffer
bind-key -t vi-copy 'v' begin-selection
bind-key -t vi-copy 'y' copy-selection

# Window split bindings
unbind %
bind v split-window -v
unbind '"'
bind h split-window -h

# pane selection
bind Left select-pane -L
bind Right select-pane -R
bind Up select-pane -U
bind Down select-pane -D

# pane/window movement
bind-key j command-prompt -p "join pane from:" "join-pane -s '%%'"
bind-key s command-prompt -p "send pane to:" "join-pane -t '%%'"
bind-key S command-prompt -p "swap window with:" "swap-window -t ':%%'"
bind-key m command-prompt -p "move window to:" "move-window -t ':%%'"
bind-key , command-prompt -p "rename window to:" "rename-window '%%'"

# quick view of processes
bind '~' split-window "exec htop"

# copy tmux buffer to clipboard
bind C-y run "tmux show-buffer | xsel -b"
# move x clipboard into tmux paste buffer
bind C-p run "tmux set-buffer \"$(xsel -o)\"; tmux paste-buffer"
bind B run "tmux capture-pane -S -2000; tmux save-buffer /tmp/tmux_buffer_\"$(date +%d%m%y)\"; tmux display-message \"  Buffer captured...\""

# toggle last window
bind-key C-a last-window

# confirm before killing a window or the server
bind-key k confirm kill-window
bind-key K confirm kill-server

# on-screen time for display-panes in ms
set -g display-panes-time 2000

# enable wm window titles
set -g set-titles on

# enable auto renaming
setw -g automatic-rename on

# wm window title string (uses statusbar variables)
set -g set-titles-string "tmux:#I [ #W ]"

# reload config without killing server
bind R source-file ~/.tmux/conf \; display-message "  Config reloaded..."

# border colours
set -g pane-border-fg blue
set -g pane-active-border-fg magenta
set -g pane-active-border-bg default

# statusbar --------------------------------------------------------------
set -g window-status-format "#I:#W"
set -g window-status-current-format "#I:#W"

set -g status-keys vi
bind-key -t vi-edit Up history-up
bind-key -t vi-edit Down history-down

set -g status-interval 5
set -g status-justify centre # center align window list

# default statusbar colors
set -g status-fg blue
set -g status-bg default

# listen for activity on all windows
set -g bell-action any

# bell colours
set -g window-status-bell-bg default
set -g window-status-bell-fg red
set -g window-status-bell-attr bright

# Status bar with or without X
if '[ -n "$DISPLAY" ]' 'source-file ~/.tmux/inx'
if '[ -z "$DISPLAY" ]' 'source-file ~/.tmux/xless'
